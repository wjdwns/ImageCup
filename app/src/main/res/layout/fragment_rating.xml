<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_rank"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:id="@+id/tv_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label"
            android:textSize="40sp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/iv_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <ImageView
            android:id="@+id/iv_star1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_fullstar"
            android:layout_marginTop="20dp"
            android:layout_marginStart="50dp"
            app:layout_constraintTop_toBottomOf="@id/tv_label"
            app:layout_constraintStart_toStartOf="parent"
            />
        <ImageView
            android:id="@+id/iv_star2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_fullstar"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            app:layout_constraintTop_toBottomOf="@id/tv_label"
            app:layout_constraintStart_toStartOf="@id/iv_star1"
            />
        <ImageView
            android:id="@+id/iv_star3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_fullstar"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            app:layout_constraintTop_toBottomOf="@id/tv_label"
            app:layout_constraintStart_toStartOf="@id/iv_star2"
            />
        <ImageView
            android:id="@+id/iv_star4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_fullstar"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            app:layout_constraintTop_toBottomOf="@id/tv_label"
            app:layout_constraintStart_toStartOf="@id/iv_star3"
            />
        <ImageView
            android:id="@+id/iv_star5"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_emptystar"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            app:layout_constraintTop_toBottomOf="@id/tv_label"
            app:layout_constraintStart_toStartOf="@id/iv_star4"
            />
        <TextView
            android:id="@+id/tv_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/iv_rating"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="40dp"
            app:layout_constraintTop_toBottomOf="@id/tv_label"
            app:layout_constraintStart_toStartOf="@id/iv_star5"
            />

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="270dp"
            android:layout_height="270dp"
            android:src="@drawable/ic_image"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf ="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <ImageView
            android:id="@+id/iv_star6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_fullstar"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@id/iv_image"
            app:layout_constraintEnd_toStartOf="@id/iv_star7"
            />
        <ImageView
            android:id="@+id/iv_star7"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_emptystar"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@id/iv_image"
            app:layout_constraintEnd_toStartOf="@id/iv_star8"
            />
        <ImageView
            android:id="@+id/iv_star8"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_emptystar"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@id/iv_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            />
        <ImageView
            android:id="@+id/iv_star9"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_emptystar"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@id/iv_image"
            app:layout_constraintStart_toEndOf="@id/iv_star8"
            />
        <ImageView
            android:id="@+id/iv_star10"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_emptystar"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@id/iv_image"
            app:layout_constraintStart_toEndOf="@id/iv_star9"
            />
        <TextView
            android:id="@+id/tv_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/iv_rate"
            android:textSize="30sp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/iv_star8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>